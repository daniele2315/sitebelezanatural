function mostrarProdutos() {
    const container = document.getElementById('lista-produtos');
    listaProdutos.forEach(produto => {
      const divProduto = document.createElement('div');
      divProduto.classList.add('produto');
      divProduto.innerHTML = `
        <img src="${produto.imagem}" alt="${produto.nome}">
        <div class="nome">${produto.nome}</div>
        <div class="preco">R$ ${produto.preco.toFixed(2)}</div>
        <button class="add-carrinho" onclick="adicionarCarrinho('${produto.nome}', ${produto.preco})">Adicionar ao Carrinho</button>
      `;
      container.appendChild(divProduto);
    });
  }
 // Fun√ß√£o para adicionar produtos ao carrinho
 function adicionarCarrinho(nome, preco) {
    carrinho.push({ nome, preco });
    atualizarCarrinho()
  }

  // Fun√ß√£o para atualizar o carrinho
  function atualizarCarrinho() {
    const listaCarrinho = document.getElementById('lista-carrinho');
    listaCarrinho.innerHTML = '';
    let total = 0;
    carrinho.forEach(item => {
      const li = document.createElement('li');
      li.innerHTML = `${item.nome} - R$ ${item.preco.toFixed(2)}`;
      listaCarrinho.appendChild(li);
      total += item.preco;
    });
    document.getElementById('total-carrinho').innerHTML = `Total: R$ ${total.toFixed(2)}`;
  }

  // Fun√ß√£o para alternar a visibilidade do carrinho
  function toggleCarrinho() {
    const carrinhoItens = document.getElementById('carrinho-itens');
    carrinhoItens.style.display = carrinhoItens.style.display === 'block' ? 'none' : 'block';
  }

  function finalizarCompra() {
  if (carrinho.length === 0) {
    alert("Seu carrinho est√° vazio!");
    return;
  }

  // Mostra o formul√°rio de login
  document.getElementById('login-form').style.display = 'flex';
}

 alert("Compra finalizada com sucesso!");
  alert("Compra finalizada com sucesso!");
  carrinho = [];
  atualizarCarrinho();
  toggleCarrinho(); // fecha o carrinho ap√≥s a compra

function validarLogin() {
  const usuario = document.getElementById('usuario').value;
  const senha = document.getElementById('senha').value;

  // Verifica√ß√£o simples (voc√™ pode melhorar com autentica√ß√£o real)
  if (usuario && senha === '123') {
    alert('Login realizado com sucesso!');

    // Fecha o formul√°rio de login
    document.getElementById('login-form').style.display = 'none';

    // Finaliza a compra
    alert("Compra finalizada com sucesso!");
    carrinho = [];
    atualizarCarrinho();
    toggleCarrinho(); // Fecha o carrinho
  } else {
    alert('Usu√°rio ou senha incorretos!');
  }
}


